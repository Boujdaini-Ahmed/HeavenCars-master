@model HeavenCars.ViewModels.Cars.EditCarViewModel


@{ ViewData["Title"] = "Edit Car";
    var photoPath = $"~/Images/{Model.ExistingPhotoCar ?? "noimage.png"}"; }

<link href="~/lib/Trumbowyg-master/dist/ui/trumbowyg.min.css" rel="stylesheet" />

<section id="slider-area">
    <!--== slide Item One ==-->
    <div class="single-slide-item overlay">
        <div class="container">

            <div class="row">
                <div class="col-lg-7 text-right">
                    <div class="display-table">
                        <div class="display-table-cell">
                            <div class="slider-right-text">
                                <h1>ONLY FOR THE ADMINISTRATION!</h1>
                                <p>EDIT YOUR CAR <br> TO ATRACT ALL THE CLIENTS</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-12">
                    <div class="book-a-car">
                        <form enctype="multipart/form-data" asp-action="Edit" asp-controller="Cars" method="post" class="mt-3">
                            <!--== Pick Up Location ==-->
                            <div class="pickup-location book-item">
                                <h4>NAME:</h4>
                                <input asp-for="Name" class="form-control" placeholder="Name" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <!--== Pick Up Location ==-->
                            <!--== Pick Up Location ==-->
                            <div class="pickup-location book-item">
                                <h4>MINIMUM YEARS:</h4>
                                <input asp-for="MinLeeftijd" class="form-control" placeholder="Leeftijd" />
                                <span asp-validation-for="MinLeeftijd" class="text-danger"></span>
                            </div>
                            <!--== Pick Up Location ==-->
                            <!--== Pick Up Location ==-->
                            <div class="pickup-location book-item">
                                <h4>PRICE:</h4>
                                <input asp-for="Prijs" class="form-control" placeholder="Price" />
                                <span asp-validation-for="Prijs" class="text-danger"></span>
                            </div>
                            <!--== Pick Up Location ==-->
                            <!--== Pick Up Location ==-->
                            <div class="pickup-location book-item">
                                <h4>KW:</h4>
                                <input asp-for="Kw" class="form-control" placeholder="KW" />
                                <span asp-validation-for="Kw" class="text-danger"></span>
                            </div>
                            <div class="pickup-location book-item">
                                <h4>Content:</h4>
                                <textarea id="editor" asp-for="Content"></textarea>
                                <span asp-validation-for="Content" class="text-danger"></span>
                            </div>
                            <!--== Pick Up Location ==-->
                            <!--== Pick Up Location ==-->
                            <div class="pickup-location book-item">
                                <h4>PICTURE:</h4>
                                <div class="custom-file">
                                    <input asp-for="Photo" class="form-control custom-file-input" />
                                    <label class="custom-file-label">Choose File...</label>
                                </div>
                                <span asp-validation-for="Photo" class="text-danger"></span>
                            </div>
                            <!--== Pick Up Location ==-->

                            <div class="book-button text-center">
                                <button type="submit" class="book-now-btn">Edit</button>
                                <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Cancel</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--== slide Item One ==-->
</section>
<!--== Slider Area End ==-->
