@model int

@{ ViewData["Title"] = "404 Error"; }

<section id="page-404-wrap" class="section-padding overlay">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="page-404-content">
                    <div class="number">
                        <div class="four">4</div>
                        <div class="zero">
                            <img src="~/images/Icons/404.png" alt="JSOFT">
                        </div>
                        <div class="four">4</div>
                    </div>
                    <h4>Car = @Model cannot be found</h4>
                    <p>SORRY, WE COULDN'T FIND THE PAGE <br> YOU'RE LOOKING.</p>
                    <a asp-controller="Cars" asp-action="ListCars" class="btn-404-home">  <i class="fa fa-home"></i> 
                        Click here to see the list of cars
                    </a>
                    
                </div>
            </div>
        </div>
    </div>
</section>