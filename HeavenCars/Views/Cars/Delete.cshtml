@model HeavenCars.DataAccessLayer.Models.Cars.Car

@{ ViewData["Title"] = "Delete car";
    var photoCar = $"~/Images/{Model.PhotoCar ?? "noimage.png"}"; }


<section id="page-404-wrap" class="section-padding overlay">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="page-404-content">
                    <h2>@Model.CarModel.Brand.BrandName</h2>
                    <hr />
                    <h4>Are you sure you want to delete this car?</h4>
                    <img class="card-img-top imageThumbnail" asp-append-version="true" src="@photoCar" />

                    <form asp-action="DeleteShure" asp-controller="Cars" >
                        <input hidden asp-for="@Model.CarId" />
                        <button class="btn-delete-home"><i class="fa fa-trash"></i>Shure to Delete</button>
                    </form>
                    <a asp-controller="Administration" asp-action="Index" class="btn-404-home">
                        <i class="fa fa-home"></i>
                        Return.
                    </a>

                </div>
            </div>
        </div>
    </div>
</section>
