@model HeavenCars.ViewModels.Account.ResetPasswordViewModel

@{ ViewData["Title"] = "Reset Password"; }

<section id="slider-area">
    <div class="single-profile-item overlay">
        <div class="container">

            <div class="row">
                <div class="col-lg-7 text-right">
                    <div class="display-table">
                        <div class="display-table-cell">
                            <div class="slider-right-text">
                                <h1>RESET PASSWORD</h1>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-12">
                    <div class="book-a-car">
                        <form method="post">
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <input asp-for="Token" type="hidden" />
                            <input asp-for="Email" type="hidden" />
                            <div class="pickup-location book-item">
                                <h4>PASSWORD:</h4>
                                <input asp-for="Password" class="form-control" placeholder="Password" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="pickup-location book-item">
                                <h4>CONFIRM PASSWORD:</h4>
                                <input asp-for="ConfirmPassword" class="form-control" placeholder="Conifrm Password" />
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                            <div class="book-button text-center">
                                <button type="submit" class="book-now-btn">Save</button>
                                <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Cancel</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
