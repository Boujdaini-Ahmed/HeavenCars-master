@model HeavenCars.ViewModels.Administration.RoleCreateViewModel

@{ ViewData["Title"] = "Create Role";
    Layout = "~/Views/Shared/_AdminPanelLayout.cshtml"; }


<div class="main-content">
    <div class="section__content section__content--p30">
        <div class="container-fluid">

            <div class="row">
                <div class="col-md-8">
                    <div class="overview-wrap">
                        <h2 class="title-1"> <i class="fas fa-user"></i> Add Role</h2>
                    </div>
                </div>
            </div>
            <br />

            <hr /> 
            <div class="col-md-8">

                @if (!String.IsNullOrEmpty(ViewBag.Msg))
                {
            <div class="alert alert-info alert-dismissible" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                @ViewBag.Msg
            </div>}

            <form method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="RoleName"></label>
                    <input asp-for="RoleName" class="form-control" />
                    <span asp-validation-for="RoleName" class="text-danger"></span>
                </div>
                <button type="submit" class="au-btn au-btn-icon au-btn--blue">Create Role</button>
                <a asp-controller="administration" asp-action="listroles" class="au-btn au-btn-icon au-btn--blue">Cancel</a>
                
            </form>

                <br />
            </div>
        </div>
    </div>
</div>

