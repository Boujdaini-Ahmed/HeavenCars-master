@model HeavenCars.DataAccessLayer.Models.Cars.Car

@{ ViewData["Title"] = "Delete car";
    var photoCar = $"~/Images/{Model.PhotoCar ?? "noimage.png"}"; }

<div class="row justify-content-center m-3">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header">
                <h1>@Model.Name</h1>
            </div>

            <div class="card-body text-center">
                <h3>Are you sure you want to delete this?</h3>

                <img class="card-img-top imageThumbnail" asp-append-version="true" src="@photoCar" />

                <h4>Car ID: @Model.CarId</h4>
                <h4>Leeftijd: @Model.MinLeeftijd</h4>
                <h4>Prijs: @Model.Prijs</h4>
                <h4>KW: @Model.Kw</h4>

            </div>
            <div class="card-footer text-center">

                <form asp-action="DeleteShure" asp-controller="Cars">
                    <input hidden asp-for="@Model.CarId" />
                    <button class="btn btn-danger">Shure to Delete</button>
                </form>
                <a asp-action="Index" asp-controller="Home" class="btn btn-secondary">Cancel</a>
            </div>
        </div>
    </div>
</div>
