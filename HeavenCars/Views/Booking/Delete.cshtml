@model HeavenCars.DataAccessLayer.Models.Bookings.BookingVehicule

@{ ViewData["Title"] = "Delete booking"; }


<section id="page-404-wrap" class="section-padding overlay">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="page-404-content">
                    <h4>Are you sure you want to delete this booking?</h4>

                    <form asp-action="DeleteShure" asp-controller="Booking">
                        <input hidden asp-for="@Model.BookingId" />
                        <button class="btn-delete-home"><i class="fa fa-trash"></i>Shure to Delete</button>
                    </form>
                    <a asp-controller="booking" asp-action="bookingslist" class="btn-404-home">
                        <i class="fa fa-home"></i>
                        Return.
                    </a>

                </div>
            </div>
        </div>
    </div>
</section>
