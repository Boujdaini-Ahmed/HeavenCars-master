@model HeavenCars.ViewModels.Cars.CreateCarViewModel

@{ ViewBag.Title = "Create Car"; }

<link href="~/lib/Trumbowyg-master/dist/ui/trumbowyg.min.css" rel="stylesheet" />


<section id="slider-area">
    <div class="single-slide-item overlay">
        <div class="container">
            
            <div class="row">
                <div class="col-lg-7 text-right">
                    <div class="display-table">
                        <div class="display-table-cell">
                            <div class="slider-right-text">
                                <h1>ONLY FOR THE ADMINISTRATION!</h1>
                                <p>ADD YOUR NEW CAR <br> TO PATSSIONATE ALL THE CLIENTS</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-12">
                    <div class="book-a-car">
                        <form enctype="multipart/form-data" asp-action="Create" asp-controller="Cars" method="post" class="mt-3">
                            <div class="pickup-location book-item">
                                <h4>BRAND:</h4>
                                <input asp-for="@Model.CarModel.Brand.BrandName" class="form-control" placeholder="Brand" />
                                <span asp-validation-for="@Model.CarModel.Brand.BrandName" class="text-danger"></span>
                            </div>
                            <div class="pickup-location book-item">
                                <h4>MODEL:</h4>
                                <input asp-for="@Model.CarModel.ModelName" class="form-control" placeholder="Model" />
                                <span asp-validation-for="@Model.CarModel.ModelName" class="text-danger"></span>
                            </div>
                            <div class="pickup-location book-item">
                                <h4>MINIMUM YEARS:</h4>
                                <input asp-for="@Model.CarModel.MinLeeftijd" class="form-control" placeholder="Leeftijd" />
                                <span asp-validation-for="@Model.CarModel.MinLeeftijd" class="text-danger"></span>
                            </div>
                            <div class="pickup-location book-item">
                                <h4>PRICE:</h4>
                                <input asp-for="Prijs" class="form-control" placeholder="Price" />
                                <span asp-validation-for="Prijs" class="text-danger"></span>
                            </div>
                            <div class="pickup-location book-item">
                                <h4>KW:</h4>
                                <input asp-for="@Model.CarModel.Kw" class="form-control" placeholder="KW" />
                                <span asp-validation-for="@Model.CarModel.Kw" class="text-danger"></span>
                            </div>
                            <div class="pickup-location book-item">
                                <h4>Content:</h4>
                                <textarea id="editor" asp-for="Content"></textarea>
                                <span asp-validation-for="Content" class="text-danger"></span>
                            </div>
                            <div class="pickup-location book-item">
                                <h4>PICTURE:</h4>
                                <div class="custom-file">
                                    <input asp-for="Photo" class="form-control custom-file-input" />
                                    <label class="custom-file-label">Choose File...</label>
                                </div>
                                <span asp-validation-for="Photo" class="text-danger"></span>
                            </div>

                            <div class="book-button text-center">
                                <button type="submit" class="book-now-btn">Create</button>
                                <a asp-controller="Cars" asp-action="ListCarsAdmin" class="btn btn-secondary">Cancel</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {

    <script src="//ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="~/lib/Trumbowyg-master/dist/trumbowyg.min.js"></script>
    <script>$('#editor').trumbowyg();</script>

    <script>$(document).ready(function () {
            $('.custom-file-input').on("change", function () {
                var fileName = $(this).val().split("\\").pop();
                $(this).next('.custom-file-label').html(fileName);
            });
        });</script>


}