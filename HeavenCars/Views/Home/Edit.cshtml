@model HeavenCars.ViewModels.Home.PersoInformationViewModel;

@{ ViewBag.Title = "Personal Information"; }


<section id="slider-area">
    <div class="single-profile-item overlay">
        <div class="container">

            <div class="row">
                <div class="col-lg-7 text-right">
                    <div class="display-table">
                        <div class="display-table-cell">
                            <div class="slider-right-text">
                                <h1>MY PROFILE</h1>
                                <p>CHANGE YOUR PROFILE <br> OF YOUR ACCOUNT</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-12">
                    <div class="book-a-car">
                        <form method="post">
                            <div class="pickup-location book-item">
                                <h4>USERNAME:</h4>
                                <input asp-for="UserName" class="form-control" placeholder="UserName" disabled />
                                <span asp-validation-for="UserName" class="text-danger"></span>
                            </div>

                            <div class="pickup-location book-item">
                                <h4>EMAIL:</h4>
                                <input asp-for="Email" class="form-control" placeholder="Email" disabled />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div class="pickup-location book-item">
                                <h4>LAST NAME:</h4>
                                <input asp-for="LastName" class="form-control" placeholder="Price" />
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>

                            <div class="pickup-location book-item">
                                <h4>FIRST NAME:</h4>
                                <input asp-for="FirstName" class="form-control" placeholder="FirstName" />
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>

                            <div class="pickup-location book-item">
                                <h4>PHONE NUMBER:</h4>
                                <input asp-for="PhoneNumber" class="form-control" placeholder="PhoneNumber" />
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </div>
                            <div class="pickup-location book-item">
                                <h4>ADDRESS:</h4>
                                <input asp-for="Address" class="form-control" placeholder="Address" />
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>



                            <div class="book-button text-center">
                                <button type="submit" class="book-now-btn">Save</button>
                                <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Cancel</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


@section Scripts {
    @Html.PartialAsync("_ValidationScriptsPartial")
}