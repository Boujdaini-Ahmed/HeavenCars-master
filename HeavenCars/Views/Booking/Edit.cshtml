<section id="slider-area">
    <!--== slide Item One ==-->
    <div class="single-slide-item overlay">
        <div class="container">

            <div class="row">
                <div class="col-lg-7 text-right">
                    <div class="display-table">
                        <div class="display-table-cell">
                            <div class="slider-right-text">
                                <h1>ONLY FOR THE ADMINISTRATION!</h1>
                                <h2>UPDATE <br> @car.Name</h2>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-12">
                    <div class="book-a-car">
                        <form enctype="multipart/form-data" asp-action="Edit" asp-controller="Booking" method="post" class="mt-3">
                            <input type="hidden" asp-for="BookingId" />
                            <!--== Pick Up Location ==-->
                            <div class="single-car-preview">
                                <img class="card-img-top" src="@photoCar" asp-append-version="true" />

                            </div>

                            <div class="pickup-location book-item">
                                <h4>CAR BRAND:</h4>
                                <input asp-for="@car.Name" class="form-control" placeholder="Car Brand" />
                                <span asp-validation-for="@car.Name" class="text-danger"></span>
                            </div>

                            <div class="pickup-location book-item">
                                <h4>START DATE:</h4>
                                <input asp-for="StartDate" class="form-control" placeholder="Date" />
                                <textarea asp-for="StartDate" class="form-control" rows="3" cols="20" placeholder="Start Date"> </textarea>
                                <span asp-validation-for="StartDate" class="text-danger"></span>
                            </div>

                            <div class="pickup-location book-item">
                                <h4>END DATE:</h4>
                                <input asp-for="EndDate" class="form-control" rows="3" cols="20" placeholder="Date" />
                                @*<textarea asp-for="EndDate" class="form-control" rows="3" cols="20" placeholder="End Date"> </textarea>*@
                                <span asp-validation-for="EndDate" class="text-danger"></span>
                            </div>
                            <div class="pickup-location book-item">
                                <h4>STATUS:</h4>

                                <select asp-for="BookingVanStatus" asp-items="Html.GetEnumSelectList<HeavenCars.DataAccessLayer.Models.Bookings.BookingStatus>()" class="custom-select mr-sm-2">
                                    <option value="">Select Status</option>
                                </select>
                                <span asp-validation-for="BookingVanStatus" class="text-danger"></span>

                            </div>

                            <div class="book-button text-center">
                                <button type="submit" class="btn btn-success">Update</button>
                                <a asp-action="BookingsList" asp-controller="Booking" asp-route-boardid="@Model.BookingId" class="btn btn-secondary">Back</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--== slide Item One ==-->
</section>

