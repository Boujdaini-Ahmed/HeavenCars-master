@model HeavenCars.ViewModels.Account.ChangePasswordViewModel

@{ ViewData["Title"] = "Change Password"; }


<section id="slider-area">
    <div class="single-profile-item overlay">
        <div class="container">

            <div class="row">
                <div class="col-lg-7 text-right">
                    <div class="display-table">
                        <div class="display-table-cell">
                            <div class="slider-right-text">
                                <h1>CHANGE PASSWORD</h1>
                                <p>CHANGE YOUR PASSWORD <br> OF YOUR ACCOUNT</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-12">
                    <div class="book-a-car">
                        <form method="post">
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <div class="pickup-location book-item">
                                <h4>CURRENT PASSWORD:</h4>
                                <input asp-for="CurrentPassword" class="form-control" placeholder="Current Password" />
                                <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                            </div>
                            <div class="pickup-location book-item">
                                <h4>NEW PASSWORD:</h4>
                                <input asp-for="NewPassword" class="form-control" placeholder="New Password" />
                                <span asp-validation-for="NewPassword" class="text-danger"></span>
                            </div>
                            <div class="pickup-location book-item">
                                <h4>CONFIRM PASSWORD:</h4>
                                <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password" />
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                            <div class="book-button text-center">
                                <button type="submit" class="book-now-btn">Save</button>
                                <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Cancel</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
