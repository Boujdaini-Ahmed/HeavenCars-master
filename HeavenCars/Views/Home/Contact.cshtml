<!--== Page Title Area Start ==-->
<section id="page-title-area" class="section-padding overlay">
    <div class="container">
        <div class="row">
            <!-- Page Title Start -->
            <div class="col-lg-12">
                <div class="section-title  text-center">
                    <h2>Contact Us</h2>
                    <span class="title-line"><i class="fa fa-car"></i></span>
                    <p>Contact Us To Receive The Best Price For Your Location.</p>
                </div>
            </div>
            <!-- Page Title End -->
        </div>
    </div>
</section>
<!--== Page Title Area End ==-->
<!--== Contact Page Area Start ==-->
<div class="contact-page-wrao section-padding">
    <div class="container">
        <div class="row">
            <div class="col-lg-10 m-auto">
                <div class="contact-form">
                    <form method="post">
                        <div class="row">
                            <div class="col-lg-6 col-md-6">
                                <div class="name-input">
                                    <input asp-for="Name" class="form-control" placeholder= "Name" />
                                    <span asp-validation-for="Name" class="text-muted"></span>
                                </div>
                            </div>

                            <div class="col-lg-6 col-md-6">
                                <div class="email-input">
                                    <input asp-for="Email" class="form-control" placeholder="Email" />
                                    <span asp-validation-for="Email" class="text-muted"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-6 col-md-6">
                                <div class="subject-input">
                                    <input asp-for="Subject" class="form-control" placeholder="Subject" />
                                    <span asp-validation-for="Subject" class="text-muted"></span>
                                </div>
                            </div>
                        </div>

                        <div class="message-input">
                            <textarea rows="8" cols="20" asp-for="Message" class="form-control" placeholder="Message"></textarea>
                            <span asp-validation-for="Message" class="text-muted"></span>
                        </div>

                        <div>
                            <button type="submit" class="rent-btn"> Send <i class="fa fa-long-arrow-right"></i></button>
                            <a asp-controller="Home" asp-action="Index" class="rent-btn"> Back <i class="fa fa-home"></i></a>
                            @*<a asp-action="EditUser" asp-controller="Administration"
                               asp-route-id="@user.Id" class="btn btn-warning">Edit</a>*@
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<!--== Contact Page Area End ==-->
